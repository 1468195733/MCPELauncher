<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.zhuoweizhang.mcpelauncher"
      android:versionCode="1"
      android:versionName="1.0.0">
    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="9"/>
    <uses-permission
        android:name="android.permission.INTERNET"/>
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission
        android:name="android.permission.VIBRATE"/>
    <application android:label="MCPELauncher" >
        <activity android:name="com.mojang.minecraftpe.MainActivity"
                  android:label="MCPELauncher"
                  android:configChanges="orientation|keyboardHidden"
                  android:screenOrientation="landscape">
            <meta-data android:name="android.app.lib_name"
                  android:value="minecraftpe"/>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mojang.minecraftpe.MainMenuOptionsActivity"/>

        <!-- aFileChooser -->
        <activity android:name="com.ipaulpro.afilechooser.FileChooserActivity" android:exported="false">
            <intent-filter >
                <action android:name="android.intent.action.GET_CONTENT" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />
                <data android:mimeType="*/*" />
            </intent-filter>
        </activity>
    </application>

</manifest> 
